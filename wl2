import os
import json
import time
from pathlib import Path

# â”€â”€â”€ Paths â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
JSON_FOLDER = os.path.join(os.path.dirname(__file__), "..", "json")
JSON_FOLDER = os.path.abspath(JSON_FOLDER)  # Optional: resolves full path
LOG_PATH = Path("watering_log.json")

# â”€â”€â”€ Load / Save â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
def load_watering_notes():
    if LOG_PATH.exists():
        with open(LOG_PATH, "r") as f:
            return json.load(f)
    return []

def save_watering_notes(notes):
    with open(LOG_PATH, "w") as f:
        json.dump(notes, f, indent=2)

# â”€â”€â”€ Add Note â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
def add_note(plant_name, volume_ml, method, pot_size_l, interval_days,
             uptake, response_time_hr, leaf_status, growth_stage):
    note = {
        "timestamp": time.time(),
        "plant_name": plant_name,
        "volume_ml": volume_ml,
        "method": method,
        "pot_size_l": pot_size_l,
        "interval_days": interval_days,
        "uptake": uptake,
        "response_time_hr": response_time_hr,
        "leaf_status": leaf_status,
        "growth_stage": growth_stage
    }
    notes = load_watering_notes()
    notes.append(note)
    save_watering_notes(notes)
    print(f"\nâœ… Saved: {volume_ml}ml via {method} for {plant_name}, {uptake} uptake in {response_time_hr}h\n")

# â”€â”€â”€ Prompt â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
def prompt_for_note():
    try:
        plant_name = input("ğŸŒ± Plant name: ").strip()
        volume_ml = int(input("ğŸ’§ Volume (ml): "))
        method = input("ğŸª´ Method (tray/top splash/both): ").strip()
        pot_size_l = float(input("ğŸª£ Pot size (L): "))
        interval_days = int(input("â± Interval (days): "))
        uptake = input("ğŸŒŠ Uptake (full/partial/slow): ").strip()
        response_time_hr = float(input("â³ Uptake time (hrs): "))
        leaf_status = input("ğŸƒ Leaf status (perky/clawing/yellowing): ").strip()
        growth_stage = input("ğŸŒ¿ Growth stage (Veg/Flower/etc.): ").strip()

        add_note(plant_name, volume_ml, method, pot_size_l,
                 interval_days, uptake, response_time_hr,
                 leaf_status, growth_stage)
    except Exception as e:
        print(f"âŒ Error: {e}\n")

# â”€â”€â”€ Entry Point â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if __name__ == "__main__":
    print("ğŸª´ Watering Log Entry Tool")
    while True:
        proceed = input("Log new watering entry? (y/n): ").strip().lower()
        if proceed != 'y':
            print("ğŸ‘‹ Exiting watering log.")
            break
        prompt_for_note()

