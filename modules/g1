from rich.panel import Panel
from rich.table import Table
import subprocess

def get_top_processes_panel():
    try:
        # Get top 8 processes by CPU usage
        output = subprocess.getoutput("ps -eo pid,comm,%cpu,%mem --sort=-%cpu | head -n 8")
        lines = output.strip().split("\n")[1:]  # Skip header

        table = Table(show_header=True, header_style="bold magenta")
        table.add_column("PID", justify="right")
        table.add_column("Name", justify="left")
        table.add_column("CPU %", justify="right")
        table.add_column("MEM %", justify="right")

        for line in lines:
            parts = line.split(None, 3)
            if len(parts) == 4:
                pid, name, cpu, mem = parts
                table.add_row(pid, name, cpu, mem)

        return Panel(table, title="ðŸ§  Top Processes", border_style="grey37")

    except Exception as e:
        return Panel(f"[red]Process Panel Error: {e}[/red]", title="ðŸ§  Top Processes", border_style="grey37")
